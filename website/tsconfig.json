{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": [
    "src",
    "scripts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.cjs",
    "tailwind.config.cjs",
    "theme.config.tsx",
    "next-sitemap.config.cjs"
  ],
  "exclude": ["node_modules"]
}
