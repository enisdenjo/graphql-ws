{
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "src",
    "tests",
    "scripts",
    "rollup.config.js",
    "babel.config.js",
    "jest.config.js",
    ".eslintrc.js",
    "typedoc.js"
  ]
}
